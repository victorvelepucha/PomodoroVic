<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
    </startup>
  <appSettings>
    <!--Valores recomendados opacidad: 0.75, 0.50, 0.25, aunque acepta valores entre 0 y 1-->
    <add key="opacidad" value="0.75"/>
    <!--true para siempre visible, caso contrario false-->
    <add key="TopMost" value="true"/>
    <!--Blink true o false, es para alternar colores a 1 minuto antes de finalizar-->
    <add key="Blink" value="true"/>
    <!--AutoSwitch true o false, si esta en true luego de finalizar un pomodoro continua al complemento del otro pomodoro.-->
    <add key="AutoSwitch" value="true"/>
    <!--LogEnabled true o false, si esta en true escribirá un archivo de texto con las fechas de inicio y fin de los pomodoros, para tener estadísticas.-->
    <!--Valores aceptados para trabajo/descanso: Para pomodoro es 25/5. Para fokasu es 52/17-->
    <add key="LogEnabled" value="true"/>
    <!--IniciarConPomodoro con 25 minutos por defecto-->
    <add key="IniciarConPomodoro" value="25"/>
    <!--Se usa esta cultura para que acepte como separador decimal el . (punto)-->
    <add key="AppCulture" value="en-US"/>
    <!--PlaySound para reproducir sonido cuando falta 1 minuto para finalizar y al finalizar-->
    <add key="PlaySound" value="true"/>
  </appSettings>
</configuration>